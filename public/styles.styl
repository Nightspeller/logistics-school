.school-header 
  position relative
  background-image url(images/template/header-bg.jpg)
  .mdl-layout__header-row
    padding 0
    justify-content center


.school-logo-row
  min-height 200px
  .mdl-layout__title
    font-size 14px
    text-align center
    font-weight 300
    .school-header-logo
      height 150px
      width 150px
      margin auto auto 10px
    .school-header-text
      font-size 20px
      font-weight bold


.is-compact
  .school-logo-row
    min-height auto
    .school-header-logo
      height 50px
      width 50px
      margin-top 7px
    .school-header-logo
      display none


.school-navigation-row
  background-color rgba(0, 0, 0, 0.08)
  text-transform uppercase
  height 45px


.school-navigation-row  .mdl-navigation
  text-align center
  max-width 900px
  width 100%


.school-navigation-row .mdl-navigation__link
  -webkit-flex 1
  -ms-flex 1
  flex 1
  line-height 42px


.school-header .mdl-layout__drawer-button
  background-color rgba(197, 197, 197, 0.44)


.school-navigation-row .is-active
  position relative
  font-weight bold


.school-navigation-row .is-activeafter
  content ""
  width 70%
  height 2px
  display block
  position absolute
  bottom 0
  background-color rgb(255,64,129)
  left 15%

.school-content-text
  text-align justify

.school-card .mdl-card__title
  padding-bottom 0


.school-blog-card-full-bg
  background url(images/example-blog03.jpg) center / cover


.school-blog-card-event-bg
  background url(images/example-blog05.jpg) center / cover


.school-blog-card-strip-bg
  background url(images/example-blog06.jpg) center / cover


.school-blog-card-compact .mdl-card__title
  padding-bottom 0


.school-blog-card-bg > .mdl-card__actions
  height 52px
  padding 16px
  background rgba(0, 0, 0, 0.2)


img.article-image
  width 100%
  height auto


.school-max-width
  max-width 900px
  margin auto


.school-copy
  max-width 700px


.no-padding
  padding 0


.no-left-padding
  padding-left 0


.no-bottom-padding
  padding-bottom 0


.padding-top
  padding 10px 0 0


.school-share-btn
  position relative
  float right
  top -4px


.demo-card-event > .mdl-card__actions
  -webkit-align-items center
  -ms-flex-align center
  align-items center
  box-sizing border-box
  display -webkit-flex
  display -ms-flexbox
  display flex

footer
  background-image url(images/template/footer-background.png)
  background-size cover


